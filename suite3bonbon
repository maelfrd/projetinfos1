#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define ROWS 8 // hauteur 
#define COLS 8 // largeur
#define TYPES 5 // nombre de types de bonbons

// === Fonction qui détecte un alignement de 3 bonbons ===
int detectThree(int grid[ROWS][COLS]) {
    int found = 0;

    // Vérification horizontale
    for(int i = 0; i < ROWS; i++) {
        for(int j = 0; j < COLS - 2; j++) {
            int a = grid[i][j];
            int b = grid[i][j+1];
            int c = grid[i][j+2];

            if (a == b && b == c) {
                printf("Alignement horizontal trouvé en (%d, %d)\n", i, j);
                found = 1;
            }
        }
    }

    // Vérification verticale
    for(int jj = 0; jj < COLS; jj++) {
        for(int i = 0; i < ROWS - 2; i++) {
            int d = grid[i][jj];
            int e = grid[i+1][jj];
            int f = grid[i+2][jj];

            if (d == e && e == f) {
                printf("Alignement vertical trouvé en (%d, %d)\n", i, jj);
                found = 1;
            }
        }
    }

    return found;
}

